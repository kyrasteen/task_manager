
<div id="index">
  <h1>All Tasks</h1>

    <div class="task-list">
      <% @tasks.each do |task| %>
        <div class="individual-task">
          <h2><% task[:id] %> <a href="/tasks/<%= task[:id] %>"><%= task[:title] %></a></h2>
          <a href="/tasks/<%= task[:id] %>/edit">Edit</a>
        </div>
        <form action="/tasks/<%= task[:id] %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="delete"/>
        </form>
      <% end %>
    </div>
</div>
<footer class='link-index'>
  <a href="/">home</a>
</footer>
